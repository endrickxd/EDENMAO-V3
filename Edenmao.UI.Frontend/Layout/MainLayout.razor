@inherits LayoutComponentBase

<div class="layout-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <NavMenu />
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Navigation or Info Row -->
        <div class="top-row">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <!-- Page Content -->
        <main class="content">
            @Body
        </main>
    </div>
</div>

<!-- Agregar estilos básicos -->
<style>
    /* Contenedor principal */
    .layout-container {
        display: flex;
        min-height: 100vh;
        overflow: hidden;
    }

    /* Sidebar */
    .sidebar {
        width: 250px;
        background-color: #f8f9fa; /* Color claro */
        padding: 1rem;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }

    /* Área principal */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    /* Barra superior */
    .top-row {
        background-color: #007bff; /* Color azul */
        color: white;
        padding: 0.5rem 1rem;
        text-align: right;
    }

    .top-row a {
        color: white;
        text-decoration: none;
        margin-left: 1rem;
    }

    .top-row a:hover {
        text-decoration: underline;
    }

    /* Contenido principal */
    .content {
        padding: 1rem;
        overflow: auto;
    }
</style>